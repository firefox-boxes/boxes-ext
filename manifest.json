{
  "manifest_version": 2,
  "name": "Firefox Boxes",
  "version": "1.0",

  "description": "Seperate your different internet usages completely.",
  "homepage_url": "https://github.com/firefox-boxes/firefox-boxes",

  "icons": {
    "48": "1F3D6.svg"
  },

  "applications": {
    "gecko": {
      "id": "boxes@whatsyouridea.com",
      "strict_min_version": "50.0"
    }
  },

  "permissions": [
    "nativeMessaging"
  ],

  "browser_action": {
    "default_icon": "1F3D6.svg",
    "default_title": "Boxes",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}